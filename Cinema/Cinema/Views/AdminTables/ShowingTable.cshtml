@using Cinema.ViewModels
@model ShowingsViewModel
@{
    ViewData["Title"] = "Movies";
}
<div class="container-fluid bg-dark" style="color:white;" style="opacity: 0.9;">
    <div class="data-table-wrapper-club club-wrappers-radius data-table-wrapper">
        <h1 class="grid-header">Showings in the system</h1>
        <table id="ShowingsTable"  class="dtClubAdmins table table-striped table-bordered table-lg table-responsive-lg" cellspacing="0" width="100%" style="background-color:white;">
            <thead>
                <tr>
                    <th class="th-sm">
                        Movie
                    </th>
                    <th class="th-sm">
                        Showing date and time
                    </th>
                    <th>
                       Cinema hall
                    </th>
                    <th>
                        Cinema
                    </th>
                    <th>
                        Edit
                    </th>
                    <th>
                        Delete
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.showings)
                {
                <tr class="raport-click-row">
                    <td>@item.Movie.Title</td>
                    <td>
                        @if (item.DateAndTime != null)
                        {
                            @item.DateAndTime
                        }
                        else
                        {
                            <text>-</text>
                        }
                        }
                    </td>
                    <td>
                        @if (item.CinemaHall.Name != null)
                        {
                            @item.CinemaHall.Name
                        }
                        else
                        {
                            <text>-</text>
                        }
                    </td>
                    <td>
                        @if (item.CinemaHall.CinemaLocation.CinemaName != null)
                        {
                            @item.CinemaHall.CinemaLocation.CinemaName
                        }
                        else
                        {
                            <text>-</text>
                        }
                    </td>
                    <td>
                        <a asp-controller="AdminTables" asp-action="WorkerEdit" asp-route-index="@item.Id" style="justify-content: center; display: flex; color: black;" role="button">
                            <i class="material-icons">settings</i>
                        </a>
                    </td>

                    <td>
                        <a asp-controller="AdminTables" asp-action="DeleteShowing" asp-route-index="@item.Id" style="justify-content: center;  color: black; display: flex;">
                            <i class="material-icons">delete</i>
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

