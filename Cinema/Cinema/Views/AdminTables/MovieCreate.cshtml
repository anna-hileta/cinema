@using Cinema.ViewModels
@model EditMovieViewModel
@{
    ViewData["Title"] = "MovieEdit";
}
    <form  onsubmit="return isValidMovieCreate()" class="container bg-dark m-5 pt-2 pb-5 pr-5 pl-5 club-wrappers-radius" style="opacity: 0.9; color: white;" asp-action="MovieCreate" asp-controller="AdminTables" enctype="multipart/form-data">
        <div class="row">
            <div class="col-7">
                <h1>Create a movie</h1>
                @Html.HiddenFor(model => model.id)
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Movie title</label>
                    <input id="MovieCreateTitle" name="MovieTitle" class="form-control">
                </div>
                <label style="display:none; text-align: right; color: sandybrown;"
                       id="MovieCreateTitleMistake">This field should not be empty</label>

                <div class="form-group">
                    <label class="control-label">Country of origin name</label>
                    <input id="MovieCreateCountryOfOrigin" name="CountryOfOrigin" class="form-control">
                </div>
                <label style="display:none; text-align: right; color: sandybrown;"
                       id="MovieCreateCountryOfOriginMistake">This field should not be empty</label>

                <div class="form-group">
                    <label class="control-label">Director name</label>
                    <input id="MovieCreateDirector" name="DirectorName" class="form-control">
                </div>
                <label style="display:none; text-align: right; color: sandybrown;"
                       id="MovieCreateDirectorMistake">This field should not be empty</label>

                <div class="form-group">
                    <label class="control-label">Premiere date</label>
                    @Html.TextBoxFor(x => x.PremiereDate,
                        new { @autocomplete = "off", @type = "date", @name = "PremiereDate", @placeholder = "Choose a date...", @id = "MovieCreatePremiere", @class = "form-control" })
                </div>
                <label style="display:none; text-align: right; color: sandybrown;"
                       id="MovieCreatePremiereMistake">This field should not be empty</label>

                <div class="form-group">
                    <label class="control-label">End date</label>
                    @Html.TextBoxFor(x => x.EndDate,
                        new { @autocomplete = "off", @type = "date", @name = "EndDate", @placeholder = "Choose a date...", @id = "MovieCreateEndDate", @class = "form-control" })
                </div>
                <label style="display:none; text-align: right; color: sandybrown;"
                       id="MovieCreateEndDateMistake">This field should not be empty</label>

                <div class="form-group">
                    <label class="control-label">Movie length</label>
                    @Html.TextBoxFor(x => x.Length,
                        new { @autocomplete = "off", @type = "time", @name = "Length", @placeholder = "Choose a date...", @id = "MovieCreateLength", @class = "form-control" })
                </div>
                <label style="display:none; text-align: right; color: sandybrown;"
                       id="MovieCreateLengthMistake">This field should not be empty</label>

                <div class="form-group">
                    <label class="control-label">Poster link</label>
                    <input id="MovieCreatePoster" name="Poster" id="clubName-clubAdmins" class="form-control">
                </div>
                <label style="display:none; text-align: right; color: sandybrown;"
                       id="MovieCreatePosterMistake">This field should not be empty</label>

                <div class="form-group">
                    <label class="control-label">Movie description</label>
                    <textarea id="MovieCreateDescription" name="Description" id="clubDescription-clubAdmins" class="form-control" style="min-height: 200px;"> </textarea>
                </div>
                <label style="display:none; text-align: right; color: sandybrown;" 
                       id="MovieCreateDescriptionMistake">This field should not be empty</label>

                <div class="form-group">
                    <label class="control-label" style="justify-content: flex-start; display: flex;">Genres</label>
                    <div class="form-control" style="    height: fit-content; display: flex; flex-direction: column;">
                        @foreach (var a in Model.genre)
                        {
                            <div style="display:flex; flex-direction: row;">

                                <input type="checkbox" name="genre"
                                       value="@a.GenreId" checked="@a.IsSelected" /><span>@a.GenreName</span>
                                </div>
                            }
                    </div>
                </div>
                <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" style="width: 100%;" type="submit">
                    Save
                </button>
            </div>
    </form>

